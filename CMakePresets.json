{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/bin",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_DEBUG": "${sourceDir}/bin/debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY_RELEASE": "${sourceDir}/bin/release"
      }
    },
    {
      "name": "windows-debug-dynamic",
      "displayName": "Windows Debug (Dynamic)",
      "description": "Windows debug build with dynamic linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-debug-dynamic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "BUILD_SHARED_LIBS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-debug-static",
      "displayName": "Windows Debug (Static)",
      "description": "Windows debug build with static linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-debug-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-release-dynamic",
      "displayName": "Windows Release (Dynamic)",
      "description": "Windows release build with dynamic linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-release-dynamic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "BUILD_SHARED_LIBS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-release-static",
      "displayName": "Windows Release (Static)",
      "description": "Windows release build with static linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-release-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-debug-dynamic",
      "displayName": "Linux Debug (Dynamic)",
      "description": "Linux debug build with dynamic linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-debug-dynamic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "BUILD_SHARED_LIBS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-debug-static",
      "displayName": "Linux Debug (Static)",
      "description": "Linux debug build with static linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-debug-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release-dynamic",
      "displayName": "Linux Release (Dynamic)",
      "description": "Linux release build with dynamic linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-release-dynamic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "BUILD_SHARED_LIBS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release-static",
      "displayName": "Linux Release (Static)",
      "description": "Linux release build with static linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-release-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "mac-debug-dynamic",
      "displayName": "macOS Debug (Dynamic)",
      "description": "macOS debug build with dynamic linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mac-debug-dynamic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-osx",
        "BUILD_SHARED_LIBS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "mac-debug-static",
      "displayName": "macOS Debug (Static)",
      "description": "macOS debug build with static linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mac-debug-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-osx",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "mac-release-dynamic",
      "displayName": "macOS Release (Dynamic)",
      "description": "macOS release build with dynamic linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mac-release-dynamic",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-osx",
        "BUILD_SHARED_LIBS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "mac-release-static",
      "displayName": "macOS Release (Static)",
      "description": "macOS release build with static linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mac-release-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "VCPKG_TARGET_TRIPLET": "x64-osx",
        "BUILD_SHARED_LIBS": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "default",
      "displayName": "Default (Debug Dynamic)",
      "description": "Default debug build for current platform with dynamic linking",
      "inherits": "vcpkg-base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-base",
      "hidden": true,
      "jobs": 8,
      "verbose": false
    },
    {
      "name": "windows-debug-dynamic",
      "inherits": "build-base",
      "configurePreset": "windows-debug-dynamic",
      "description": "Build Windows Debug (Dynamic)"
    },
    {
      "name": "windows-debug-static",
      "inherits": "build-base",
      "configurePreset": "windows-debug-static",
      "description": "Build Windows Debug (Static)"
    },
    {
      "name": "windows-release-dynamic",
      "inherits": "build-base",
      "configurePreset": "windows-release-dynamic",
      "description": "Build Windows Release (Dynamic)"
    },
    {
      "name": "windows-release-static",
      "inherits": "build-base",
      "configurePreset": "windows-release-static",
      "description": "Build Windows Release (Static)"
    },
    {
      "name": "linux-debug-dynamic",
      "inherits": "build-base",
      "configurePreset": "linux-debug-dynamic",
      "description": "Build Linux Debug (Dynamic)"
    },
    {
      "name": "linux-debug-static",
      "inherits": "build-base",
      "configurePreset": "linux-debug-static",
      "description": "Build Linux Debug (Static)"
    },
    {
      "name": "linux-release-dynamic",
      "inherits": "build-base",
      "configurePreset": "linux-release-dynamic",
      "description": "Build Linux Release (Dynamic)"
    },
    {
      "name": "linux-release-static",
      "inherits": "build-base",
      "configurePreset": "linux-release-static",
      "description": "Build Linux Release (Static)"
    },
    {
      "name": "mac-debug-dynamic",
      "inherits": "build-base",
      "configurePreset": "mac-debug-dynamic",
      "description": "Build macOS Debug (Dynamic)"
    },
    {
      "name": "mac-debug-static",
      "inherits": "build-base",
      "configurePreset": "mac-debug-static",
      "description": "Build macOS Debug (Static)"
    },
    {
      "name": "mac-release-dynamic",
      "inherits": "build-base",
      "configurePreset": "mac-release-dynamic",
      "description": "Build macOS Release (Dynamic)"
    },
    {
      "name": "mac-release-static",
      "inherits": "build-base",
      "configurePreset": "mac-release-static",
      "description": "Build macOS Release (Static)"
    },
    {
      "name": "default",
      "inherits": "build-base",
      "configurePreset": "default",
      "description": "Build default configuration"
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "windows-debug-dynamic",
      "configurePreset": "windows-debug-dynamic",
      "inherits": "test-base"
    },
    {
      "name": "windows-debug-static",
      "configurePreset": "windows-debug-static",
      "inherits": "test-base"
    },
    {
      "name": "windows-release-dynamic",
      "configurePreset": "windows-release-dynamic",
      "inherits": "test-base"
    },
    {
      "name": "windows-release-static",
      "configurePreset": "windows-release-static",
      "inherits": "test-base"
    },
    {
      "name": "linux-debug-dynamic",
      "configurePreset": "linux-debug-dynamic",
      "inherits": "test-base"
    },
    {
      "name": "linux-debug-static",
      "configurePreset": "linux-debug-static",
      "inherits": "test-base"
    },
    {
      "name": "linux-release-dynamic",
      "configurePreset": "linux-release-dynamic",
      "inherits": "test-base"
    },
    {
      "name": "linux-release-static",
      "configurePreset": "linux-release-static",
      "inherits": "test-base"
    },
    {
      "name": "mac-debug-dynamic",
      "configurePreset": "mac-debug-dynamic",
      "inherits": "test-base"
    },
    {
      "name": "mac-debug-static",
      "configurePreset": "mac-debug-static",
      "inherits": "test-base"
    },
    {
      "name": "mac-release-dynamic",
      "configurePreset": "mac-release-dynamic",
      "inherits": "test-base"
    },
    {
      "name": "mac-release-static",
      "configurePreset": "mac-release-static",
      "inherits": "test-base"
    }
  ]
}

